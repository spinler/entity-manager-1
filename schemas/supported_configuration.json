{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "SupportedConfiguration": {
            "title": "Supported configurations",
            "description": [
                "A schema to describe supported objects for this entity, such",
                "as describing the various power supply models that a chassis",
                "can have plugged in, or cards that a board supports."
            ],
            "type": "object",
            "properties": {
                "Name": {
                    "type": "string"
                },
                "Type": {
                    "enum": ["SupportedConfiguration"]
                },
                "SupportedType": {
                    "description": [
                        "The entity-manager type of the supported object, ex:",
                        "PowerSupply."
                    ],
                    "type": "string"
                },
                "SupportedModel": {
                    "description": [
                        "The value of the Model property of the supported",
                        "object(s)."
                    ],
                    "type": "string"
                },
                "RedundantCount": {
                    "description": [
                        "The required number of objects of this type to obtain",
                        "redundancy."
                    ],
                    "type": "number"
                },
                "InputVoltage": {
                    "description": [
                        "The input voltage(s) that this object supports."
                    ],
                    "type": "array",
                    "items": {
                        "type": "number"
                    }
                },
                "PowerConfigFullLoad": {
                    "description": [
                        "Indicates if the number of power supplies specified",
                        "in this configuration is the maximum number that",
                        "a system supports for the case where a system has",
                        "models that support two different number of power",
                        "supplies (example 2 or 4)."
                    ],
                    "type": "boolean"
                }
            },
            "required": [
                "Name",
                "Type",
                "SupportedType",
                "SupportedModel",
                "RedundantCount",
                "InputVoltage"
            ]
        }
    }
}
